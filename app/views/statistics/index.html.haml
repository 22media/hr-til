- content_for :page_title, 'Statistics'

%section#statistics
  %header.page_head
    %h1 Statistics
  .wrapper
    %article
      %header
        %h1 Last 30 days
      %ul.activity_chart#activity
        - @posts_per_day.each do |date, count|
          - date = date.strftime("%b %e")
          %li(data-date=date data-amount=count)
            .activity_chart_bar(style="height: #{(count.to_f/highest_count_last_30_days) * 100}%")
    %article
      %header
        %h1 Most liked TILs
      %ul.post_list#top-ten
        - @top_ten.each do |ttpbl|
          %li
            = link_to post_path ttpbl do
              %b
                = ttpbl.title
              %small
                \##{ttpbl.channel.name}
                %span â€¢
                #{ttpbl.likes} likes
    .stats_column
      %article
        %header
          %h1 All channels
        %ul.post_list#channels
          - @channels.each do |channel|
            %li
              = link_to channel_path channel do
                %b ##{channel.name}
                %small #{channel.posts_count} posts

    .stats_column.right
      %article
        %header
          %h1 All authors
        %ul.post_list#authors
          - @authors.each do |author|
            %li
              = link_to developer_path author do
                %b= author.username
                %small #{author.posts_count} posts
