- unless @post_days.any?
  No posts.
- @post_days.each do |date, posts|
  .post_group
    %header
      - if date.today?
        Today
      - else
        = date.strftime('%A, %b %d')

    - posts.each do |post|
      %article.post
        - name = post.developer_username
        .title
          %span= link_to post.title, post_path(post.slug), { 'data-no-turbolink': true }
          %span //
          %span.username= link_to name, developers_show_path(name), { 'data-no-turbolink': true }
        .body= raw markdown.render post.body
        .tag{ class: post.tag_name }= link_to "##{post.tag_name}", tags_show_path(post.tag_name), { 'data-no-turbolink': true }
        - if editable? post
          = link_to "[edit]", edit_post_path(post.slug), { 'data-no-turbolink': true }

        %a{href: "http://twitter.com/share", class:"twitter-share-button", 'data-text': "TodayI learned: #{post.title}", 'data-via': "hashrocket", 'data-url': "#{request.original_url.chop}#{post_path post}"}Tweet
